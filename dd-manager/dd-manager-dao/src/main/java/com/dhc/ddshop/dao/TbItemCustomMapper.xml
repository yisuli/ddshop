<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.dhc.ddshop.dao.TbItemCustomMapper" >
  <sql id="Base_Column_List" >
    id, title, sell_point, price, num, barcode, image, cid, status, created, updated
  </sql>
  <select id="countItems" resultType="_int">
    select count(1)
    from tb_item
  </select>
  <select id="listItemsByPage" parameterType="com.lys.ddshop.common.dto.Page" resultType="com.dhc.ddshop.pojo.po.TbItem">
    SELECT
    <include refid="Base_Column_List" />
    FROM tb_item
    LIMIT #{offset},#{rows}
  </select>

</mapper>